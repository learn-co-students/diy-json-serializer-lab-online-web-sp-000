<a class="js-next" href="#" data-id="<%= @product.id %>">Next Product</a>

<h1 class="p-name"><%= @product.name %></h1>
<h2 class="p-price">Price: <%= @product.price %></h2>
<h2 class="p-inventory">Inventory: <%= @product.inventory %></h2>
<h2 class="p-description">Description: <%= @product.description %></h2>

<script type="text/javascript" charset="utf-8">

$(function () {
  $('.js-next').on("click", function(e) {
    e.preventDefault()
    let nextId = parseInt($('.js-next').attr("data-id")) + 1
    let url = "/products/" + nextId + "/data"
    $.getJSON(url, function(data) {
      $('.p-name').text(data["name"])
      $('.p-price').text(data["price"])
      $('.p-inventory').text(data["inventory"])
      $('.p-description').text(data["description"])
      $('.js-next').attr("data-id", data["id"])
    })
  })
})

</script>

<script type="text/javascript" charset="utf-8">
