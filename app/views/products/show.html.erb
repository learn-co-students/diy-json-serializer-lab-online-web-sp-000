<h1 id="product-name"><%= @product.name %></h1>
<div id="product-description"><%= @product.description %></div>

<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript" charset="utf-8">
  $(function(){
    $('.js-next').on('click', function(e){
      e.preventDefault();
      
      var nextProd = $('.js-next').data("id") + 1;
      $.getJSON('/products/' + nextProd + '/data', function(prodData){
        $("#product-name").text(prodData["name"]);
        $("#product-description").text(prodData["description"]);
        $(".js-next").data("id", nextProd)
      });
    });
  });
</script>