<div class="product">
  <%= @product.name %><br>
  <%= @product.description %><br>
</div>

<a href class="js-more" data-id="<%= @product.id %>">Next Product</a>
<a href="#">test</a>
<script type="text/javascript" charset="utf-8">
  $(function () {
  $(".js-more").on("click", function(event) {
      event.preventDefault()
      var nextId = parseInt($(".js-more").attr("data-id")) + 1;
      $.get("/products/" + nextId + ".json", function(data) {
        $(".product").text(data["name"] + data["description"]);
      // re-set the id to current on the link
        $(".js-more").attr("data-id", nextId);
    });
  });
});
</script>
